
@{
    ViewData["Title"] = "CartView";
    Layout = "_galleryLayout";
    
}

<h1>CartView</h1>




<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cart</title>
</head>
<body>

    <h3>Cart Page</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Option</th>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td><a asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.Id">Remove</a></td>
                <td>@item.Product.Id</td>
                <td>@item.Product.productName</td>
                <td><img src="" width="60" /> </td>
                <td>@item.Product.unitPrice</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.unitPrice * item.Quantity)</td>
            </tr>
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @{
                    List<Item> cart = ViewBag.cart;
                    var total = cart.Sum(item => item.Product.unitPrice * item.Quantity);
                }
                @total
            </td>
        </tr>
    </table>
    <br>
    <a href="@Url.Action("Gallery", "Gallery")">Continue Shopping</a>

</body>
</html>

