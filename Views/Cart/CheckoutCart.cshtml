
@{
    ViewBag.Title = "CheckoutCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Purchases</h1>

@if (@ViewBag.CartItems == null)
    {
    <div class="alert alert-danger">
        <strong>No product added to cart!</strong>
    </div>

    }

    else
    {
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Line Total</th>
            <th>Checkout Time</th>
            <th>Activation Code</th>


        </tr>
    </thead>
    <tbody>
        @{
            int Total = 0;
        }
        @foreach (var item in @ViewBag.CartItems)
        {
            int lineTotal = Convert.ToInt32(item.Quantity * item.Product.unitPrice);
            Total = Convert.ToInt32(@Total + lineTotal);
            <tr>
                <td>@item.Product.productName</td>
                <td>@item.Product.unitPrice</td>
                <td>@item.Quantity</td>
                <td>@lineTotal</td>
                <td>@item.CheckoutTime</td>
                <td>
                    <select>
                        @{
                            foreach (var activationCode in item.ActivationCodes)
                            {
                                <option>@activationCode</option>
                            }
                        }
                    </select>
                </td>
                <td><button>Download</button></td>

            </tr>
        }


        <tr>
            <td colspan="4" class="text-right"><b>Total: @Total</b></td>
        </tr>

        <tr></tr>
        <tr></tr>
        <tr></tr>
        <tr></tr>
        <tr></tr>


    </tbody>
    <td colspan="6"></td>
    
    <td colspan="4" class="text-right"><a href="/Gallery"><button class="btn btn-primary">Return to Gallery</button></a></td>
</table>
    }