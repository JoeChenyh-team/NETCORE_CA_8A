
@model Product;

@{
    ViewData["Title"] = "Gallery";
    Layout = "_galleryLayout";

}


@section Scripts
{
    <script>
        var updateCart = function (url) {
            $("#cartButton").load(url);
        };
    </script>
}
<h1>@ViewData["_galleryLayout"]</h1>



<p>Welcome to T8A SoftStore's Product Gallery : Product Information</p>
<div align="center">
    <form action="/Gallery/Gallery" class="form-inline">
        <div class="form-group">
            <input type="text" class="form-control input-sm" minlength="1" maxlength="64" placeholder="Search for product" name="keyword" value=@(ViewBag.keyword)>
        </div>
        <div class="form-group">
            <input class="button-primary" type="submit" value="Search">
        </div>
    </form>
</div>
<br />


@{
    if (@ViewBag.search == "not found")
    {
        <p>Sorry! Product is not found...</p>
    }



    else
    {


        {@: @ViewBag.keyword


    }

    foreach (Product product in @ViewBag.products)
    {
        <td></td>
        <td></td>
        <td></td>
        var str = "/Cart/AddtoCart";
        <div class="gallery_product col-lg-3 col-md-4 col-xs-6">
            <form action=@str class="form-inline">
                <div><h3 class="title">@product.productName</h3></div>

                <div><p class="desc">@product.description</p></div>

                <div></div>
                <img src="@product.Image" width="120" height="120"><p></p>
                <div>Price: $@product.unitPrice</div><p></p>
                <input name="productId" type="hidden" value="@product.Id" />

                <input class="button-primary" type="submit" value="Add To Cart">
